<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <TextView
      android:id="@+id/titel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bee Cartographer"
      android:textAlignment="center"
      android:textSize="42sp"
      android:textStyle="bold"
      android:layout_marginTop="50dp"
      android:textColor="@color/accent"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:orientation="vertical"
      >


    <Button
        android:text="add new points on google map"
        android:id="@+id/map_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/leku_app_button_border"
        android:textColor="@color/leku_app_strong_blue"
        tools:targetApi="lollipop"
        />
    <Button
        android:text="See all saved points on the google Map"
        android:id="@+id/map_button_with_pois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/leku_app_button_border"
        android:textColor="@color/leku_app_strong_blue"
        tools:targetApi="lollipop"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/leku_app_version"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bee Technology Gmbh"
      android:textAlignment="center"
      android:layout_gravity="bottom"
      android:paddingBottom="8dp"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="@color/accent"
      />


  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="1dp"
        fab:menu_colorPressed="#99d4d4d4"
        fab:menu_colorRipple="#66efecec"
        fab:menu_fab_label="Quick Menu"
        fab:menu_fab_size="normal"
        fab:menu_icon="@mipmap/ic_bee_round"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="1dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="2dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="1dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#f2f1f1"
        fab:menu_shadowRadius="1dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="1dp"
        fab:menu_showShadow="true">

      <com.github.clans.fab.FloatingActionButton
          android:id="@+id/About"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_camera"
          fab:fab_label="About Bee Catographer"
          fab:fab_size="mini" />


      <com.github.clans.fab.FloatingActionButton
          android:id="@+id/SaveAnotherPoint"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/fab_add"
          fab:fab_label="Save a new Goople Place"
          fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

  </RelativeLayout>
</merge>
