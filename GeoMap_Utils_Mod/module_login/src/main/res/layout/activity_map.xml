<merge xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >


  <TextView
      android:id="@+id/titel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bee Cartographer"
      android:textAlignment="center"
      android:textSize="42sp"
      android:textStyle="bold"
      android:layout_marginTop="50dp"
      android:textColor="@color/accent"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:gravity="center"
      android:orientation="vertical"
      >


    <Button
        android:text="add new points on google map"
        android:id="@+id/map_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/leku_app_button_border"
        android:textColor="@color/leku_app_strong_blue"
        tools:targetApi="lollipop"
        />
    <Button
        android:text="See all saved points on the google Map"
        android:id="@+id/map_button_with_pois"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/leku_app_button_border"
        android:textColor="@color/leku_app_strong_blue"
        tools:targetApi="lollipop"
        />
  </LinearLayout>

  <TextView
      android:id="@+id/leku_app_version"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Bee Technology Gmbh"
      android:textAlignment="center"
      android:layout_gravity="bottom"
      android:paddingBottom="8dp"
      android:textSize="12sp"
      android:textStyle="bold"
      android:textColor="@color/accent"
      />
</merge>
